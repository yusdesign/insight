{
  "name": "insight-monorepo",
  "version": "0.1.0",
  "description": "A suite of intelligent development tools for understanding code",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "npm run test --workspaces",
    "test:point": "npm test --workspace=point.js",
    "test:hunch": "npm test --workspace=hunch.js",
    "test:intuition": "npm test --workspace=intuition.js",
    "test:insight": "npm test --workspace=insight.js",
    "build": "echo 'No build step needed for now'",
    "dev": "npm run dev --workspaces",
    "clean": "rm -rf node_modules packages/*/node_modules"
  },
  "keywords": [
    "code-analysis",
    "developer-tools",
    "static-analysis",
    "ai",
    "machine-learning"
  ],
  "author": "yusdesign",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yusdesign/insight.git"
  },
  "devDependencies": {
    "lerna": "^6.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
